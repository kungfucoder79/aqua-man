@using AquaMan.Models
@using AquaMan.Services
@using AquaMan.Extensions

@model FeedingTimes
@inject IFormDataService FormDataHelper

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Enter times for feeding <br />
            </h1>
        </div>
    </div>
    @using (Html.BeginForm(nameof(FeedingController.FeedingTimes), nameof(FeedingController).RemoveControllerFromName(), FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <input asp-for="Pinches" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <span asp-validation-for="Feedings[0]" />
                    </div>
                    <div class="col-xs-9">
                        <input asp-for="Feedings[0]" type="time" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <span asp-validation-for="Feedings[1]" />
                    </div>
                    <div class="col-xs-9">
                        <input asp-for="Feedings[1]" type="time" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <span asp-validation-for="Feedings[2]" />
                    </div>
                    <div class="col-xs-9">
                        <input asp-for="Feedings[2]" type="time" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <span asp-validation-for="Feedings[3]" />
                    </div>
                    <div class="col-xs-9">
                        <input asp-for="Feedings[3]" type="time" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <span asp-validation-for="Feedings[4]" />
                    </div>
                    <div class="col-xs-9">
                        <input asp-for="Feedings[4]" type="time" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-9">
                        <input type="submit" class="pull-left btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
    </div>


